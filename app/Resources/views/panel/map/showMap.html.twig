{% extends 'panel/panelLayout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {#<script src="{{ asset('js/map/google-map-api.js') }}"></script>#}
{% endblock javascripts %}

{% block panelContent %}
    {% include 'template/flashMsg.html.twig' %}
    <div class="row bg-white pt-3">
        <div class="col-lg-7 float-left">
            <h3>{{ map.name }}</h3>
        </div>
        <div class="col-lg-2 form-group">
            {% set favouriteFound = 0 %}
            {% for favourite in map.favourite %}
            {% if favourite.username == app.user.username %}
            <a href="{{ path('panel_remove_favourite_map', {'id': map.id}) }}" class="btn btn-secondary">Usuń z ulubionych</a>
                {% set favouriteFound = 1 %}
            {% endif %}
            {% endfor %}
            {% if favouriteFound == 0 %}
            <a href="{{ path('panel_add_favourite_map', {'id': map.id}) }}" class="btn btn-warning">Dodaj do ulubionych</a>
            {% endif %}
            {#{% if map.favourite.id %}#}
        </div>
        <div class="col-lg-3">
            {% if app.user.id == map.author.id %}
                <a href="{{ path('panel_map_edit', {'id': map.id}) }}" class="btn btn-primary">Edytuj mapę</a>
            {% endif %}
        </div>
    </div>
    <div class="link bg-white">
        <div class="row bg-white mt-2 pt-3 pb-3 text-center">
            <div class="col-lg-4">
                Autor: <a href="#">{{ map.author.username }}</a>
            </div>
            <div class="col-lg-4">
                Poziom trudności: Średni
            </div>
            <div class="col-lg-4">
                Ocena użytkowników: 5/5
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-lg-3 text-center">
                Opis trasy:
            </div>
            <div class="col-lg-9">
                {{ map.description }}

            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-lg-12">
                <div id="map" style="height: 400px">
                </div>
            </div>
        </div>
        <hr>
    </div>
    <div class="row bg-white">
        <div class="col-2 pt-3 text-center">
            Napisz komentarz:
        </div>
        <div class="col-lg-8">
            {{ form_start(form) }}
            {{ form_widget(form.comment) }}
        </div>
        <div class="col-lg-2 pt-3">
            {{ form_widget(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>

    {% for comment in map.comment %}
        <div class="row mt-2 bg-white p-2">
            <div class="col-lg-2 text-center">
                {{ comment.author.username }}
                <br><h1>
                    <i class="fa fa-user-circle"></i>
                </h1>
                <br>
                {{ comment.createDate|date('d.n.Y H:m:s') }}
            </div>
            <div class="col-lg-10 mt-4">
                {{ comment.comment }}
            </div>
        </div>
    {% endfor %}

    <script type="text/javascript">
        var directionsDisplay,
            directionsService;
        var start = JSON.parse({{ map.start|json_encode|raw }}),
            end = JSON.parse({{ map.end|json_encode|raw }}),
            waypoints = JSON.parse({{ map.waypoints|json_encode|raw }});

        function initMap() {
            directionsDisplay = new google.maps.DirectionsRenderer;
            directionsService = new google.maps.DirectionsService;
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 6,
                center: start,
                gestureHandling: 'greedy'
            });

            directionsDisplay.setMap(map);
            calculateRoute(directionsService, directionsDisplay);
        }

        function calculateRoute(directionsService, directionsDisplay) {
            var wp = [];

            for (i = 0; i < Object.keys(waypoints).length; i++ )
            {
                wp.push({
                    location:waypoints[i],
                    stopover:false
                });
            }

                directionsService.route({
                    origin: start,
                    destination: end,
                    waypoints: wp,
                    optimizeWaypoints: true,
                    travelMode: 'BICYCLING'
                }, function (response, status) {
                    if (status == 'OK') {
                        directionsDisplay.setDirections(response);
                    } else {
                        window.alert('Directions request failed due to ' + status);
                    }
                });
        }
    </script>
    {% if data is defined %}
    {{ data }}
        {% endif %}
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDIttfn5Ev35d4l9w1UuF4bam8jHZzTXg0&callback=initMap">
    </script>

{% endblock %}