{% extends 'panel/panelLayout.html.twig' %}
{% block panelContent %}

    <div class="row bg-white pt-3">
        <div class="col-lg-7 float-left">
    {% if app.request.get('_route') == 'panel_post_search' %}
        <h3>Szukasz: {{ search }}</h3>
        {% else %}
            <h3>Aktualności</h3>
            {% endif %}
        </div>
        <div class="col-lg-5 form-group search">
            {{ render(controller('AppBundle:Post:searchPost')) }}
        </div>
    </div>
    {% for post in pagionator %}
    <div class="article bg-white">
        <div class="row mt-2">
            <div class="col-lg-12">
                <h2><a href="{{ path('panel_post', {'slug': post.slug}) }}">{{ post.title }}</a></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <small>Kategorie: {% if post.category.slug is not defined %} No category {% else %} <a href="{{ path('panel_post_category', {'slug': post.category.slug}) }}">{{ post.category.name }} {% endif %}</a>| Tagi: {% for tag in post.tag %} <a href="{{ path('panel_post_tag', {'slug': tag.slug})}}">{{ tag.name }}</a>{% endfor %}</small>
            </div>
            <div class="col-lg-6">
                <small class="float-right">Dodano: {{ post.publishDate|date('d.n.Y H:m:s') }}</small>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-lg-12">
                <article>
                    {{ post.content|length > 600 ? post.content|slice(0, 600) ~ '...': post.content }}
                </article>
            </div>
        </div>
        <div class="row">
            <div class="col-10">
                <small class="float-right pt-2">Komentarze 10</small>
            </div>
            <div class="col-lg-2">
                <a href="#" class="btn btn-primary">Czytaj więcej</a>
            </div>
        </div>
    </div>
        {% endfor %}
    {{ knp_pagination_render(pagionator) }}

{% endblock %}