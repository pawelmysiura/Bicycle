{% extends 'panel/panelLayout.html.twig' %}
{% block panelContent %}
    {% include 'template/flashMsg.html.twig' %}
        <div class="article bg-white">
            <div class="row mt-2">
                <div class="col-lg-12">
                    <h2><a href="#">{{ post.title }}</a></h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <small>Kategorie: <a href="{{ path('panel_post_category', {'slug': post.category.slug}) }}">{{ post.category.name }}</a> | Tagi: {% for tag in post.tag %} <a href="{{ path('panel_post_tag', {'slug': tag.slug})}}">{{ tag.name }}</a>{% endfor %}</small>
                </div>
                <div class="col-lg-6">
                    <small class="float-right">Dodano: {{ post.publishDate|date('d.n.Y H:m:s') }}</small>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-lg-12">
                    <article>
                        {{ post.content }}
                    </article>
                </div>
            </div>
            <hr>
        </div>
        <div class="row bg-white">
            <div class="col-2 pt-3 text-center">
                Napisz komentarz:
            </div>
            <div class="col-lg-8">
                {{ form_start(form) }}
                {{ form_widget(form.comment) }}
            </div>
            <div class="col-lg-2 pt-3">
                {{ form_widget(form.submit) }}
                {{ form_end(form) }}
            </div>
        </div>

    {% for comment in post.comment %}
        <div class="row mt-2 bg-white p-2">
            <div class="col-lg-2 text-center">
                {{ comment.author.username }}
                <br><h1>
                    <i class="fa fa-user-circle"></i>
                </h1>
                <br>
                {{ comment.createDate|date('d.n.Y H:m:s') }}
            </div>
            <div class="col-lg-10 mt-4">
                {{ comment.comment }}
            </div>
        </div>
        {% endfor %}

{% endblock %}