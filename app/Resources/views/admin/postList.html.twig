{% extends 'admin/adminlLayout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {#<script src="{{ asset('js/map/google-map-api.js') }}"></script>#}
{% endblock javascripts %}

{% block panelContent %}
    {% include 'template/flashMsg.html.twig' %}
    <div class="row bg-white pt-3">
        <div class="col-lg-7 float-left">
            {% if app.request.get('_route') == 'panel_map_search' %}
                <h3>Szukane: {{ search }}</h3>
                {% else %}
            <h3>Posts</h3>
                    {% endif %}
        </div>
        <div class="col-lg-5 form-group search">
            {{ render(controller('AppBundle:Map:searchMap')) }}
        </div>
    </div>
    <div class="row mt-3 bg-white">
        <div class="col-lg-12 mt-2">
            <table class="table table-striped text-center">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                {% for post in paginator %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td><a style="color: black" href="{{ path('panel_post', {"slug": post.slug}) }}">{{ post.title }}</a> </td>
                    <td>{{ post.author.username }}</td>
                    <td><a href="#" class="btn btn-primary">Edit</a> </td>
                    <td><a style="color: darkred;" href="#" class="fas fa-times"></a></td>
                </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {{ knp_pagination_render(paginator) }}
    </div>

{% endblock %}