{% extends 'admin/adminlLayout.html.twig' %}

{% block title %}
    {{ 'admin.title.post_tags'|trans({}, 'controller') }}
{% endblock %}

{% block panelContent %}
    {% include 'template/flashMsg.html.twig' %}
    <div class="row bg-white pt-3">
        <div class="col-lg-4 float-left">
            <h3>{{ 'admin.title.post_tags'|trans({}, 'controller') }}</h3>
        </div>
        <div class="col-lg-5 text-center">
        </div>
        <div class="col-lg-3 form-group search">
            <a href="{{ path('admin_tag_create') }}" class="btn btn-primary">{{ 'admin.tag.create'|trans({}, 'controller') }}</a>
        </div>
    </div>
    <div class="row mt-3 bg-white">
        <div class="col-lg-12 mt-2">
            <table class="table table-striped text-center">
                <thead>
                <tr>
                    <th>{{ 'admin.id'|trans({}, 'controller') }}</th>
                    <th>{{ 'admin.table_title'|trans({}, 'controller') }}</th>
                    <th>{{ 'admin.edit'|trans({}, 'controller') }}</th>
                    <th>{{ 'admin.delete'|trans({}, 'controller') }}</th>
                </tr>
                </thead>
                <tbody>
                {% for tag in paginator %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.name }}</a> </td>
                    <td><a href="{{ path('admin_tag_edit', {"slug": tag.slug}) }}" class="btn btn-primary">{{ 'admin.edit'|trans({}, 'controller') }}</a> </td>
                    <td><a style="color: darkred;" href="{{ path('admin_tag_delete', {"slug": tag.slug}) }}" class="fas fa-times"></a></td>
                </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {{ knp_pagination_render(paginator) }}
    </div>

{% endblock %}