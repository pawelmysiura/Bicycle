{% extends 'admin/adminlLayout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {#<script src="{{ asset('js/map/google-map-api.js') }}"></script>#}
{% endblock javascripts %}

{% block panelContent %}
    {% include 'template/flashMsg.html.twig' %}
    <div class="row bg-white pt-3">
        <div class="col-lg-4 float-left">
            <h3>Categories</h3>
        </div>
        <div class="col-lg-5 text-center">
        </div>
        <div class="col-lg-3 form-group search">
            <a href="{{ path('admin_category_create') }}" class="btn btn-primary">Create new category</a>
        </div>
    </div>
    <div class="row mt-3 bg-white">
        <div class="col-lg-12 mt-2">
            <table class="table table-striped text-center">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                {% for category in paginator %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</a> </td>
                    <td><a href="{{ path('admin_category_edit', {"slug": category.slug}) }}" class="btn btn-primary">Edit</a> </td>
                    <td><a style="color: darkred;" href="{{ path('admin_category_delete', {'slug': category.slug}) }}" class="fas fa-times"></a></td>
                </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {{ knp_pagination_render(paginator) }}
    </div>

{% endblock %}