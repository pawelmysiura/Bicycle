{% extends 'admin/adminlLayout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {#<script src="{{ asset('js/map/google-map-api.js') }}"></script>#}
{% endblock javascripts %}

{% block panelContent %}
    {% include 'template/flashMsg.html.twig' %}
    <div class="row bg-white pt-3">
        <div class="col-lg-4 float-left">
            {% if app.request.get('_route') == 'admin_post_search' %}
                <h3>Szukane: {{ search }}</h3>
                {% else %}
            <h3>Posts</h3>
                    {% endif %}
        </div>
        <div class="col-lg-3 text-center">
        <a href="{{ path('admin_post_create') }}" class="btn btn-primary">Create new post</a>
        </div>
        <div class="col-lg-5 form-group search">
            {{ render(controller('AppBundle:Admin/Post:searchPost')) }}
        </div>
    </div>
    <div class="row mt-3 bg-white">
        <div class="col-lg-12 mt-2">
            <table class="table table-striped text-center">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(paginator, 'Id', 'p.id') }}</th>
                    <th>{{ knp_pagination_sortable(paginator, 'Title', 'p.title') }}</th>
                    <th>{{ knp_pagination_sortable(paginator, 'Category', 'c.name') }}</th>
                    <th>Tag</th>
                    <th>{{ knp_pagination_sortable(paginator, 'Author', 'a.username') }}</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                {% for post in paginator %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td><a style="color: black" href="{{ path('panel_post', {"slug": post.slug}) }}">{{ post.title }}</a> </td>
                    <td>{% if post.category.name is not defined %} null {% else %}{{ post.category.name }}{% endif %}</td>
                    <td>{% for tag in post.tag %} {{ tag.name }} | {% endfor %}</td>
                    <td>{{ post.author.username }}</td>
                    <td><a href="{{ path('admin_post_edit', {"slug": post.slug}) }}" class="btn btn-primary">Edit</a> </td>
                    <td><a style="color: darkred;" href="{{ path('admin_post_delete', {"slug": post.slug}) }}" class="fas fa-times"></a></td>
                </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {{ knp_pagination_render(paginator) }}
    </div>

{% endblock %}