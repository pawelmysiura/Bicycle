{% extends 'admin/adminlLayout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {#<script src="{{ asset('js/map/google-map-api.js') }}"></script>#}
{% endblock javascripts %}

{% block panelContent %}
    {% include 'template/flashMsg.html.twig' %}
    <div class="row bg-white pt-3">
        <div class="col-lg-7 float-left">
            {% if app.request.get('_route') == 'admin_user_search' %}
                <h3>Szukane: {{ search }}</h3>
                {% else %}
            <h3>Users</h3>
                    {% endif %}
        </div>
        <div class="col-lg-5 form-group search">
            {{ render(controller('AppBundle:Admin/User:searchUser')) }}
        </div>
    </div>
    <div class="row mt-3 bg-white">
        <div class="col-lg-12 mt-2">
            <table class="table table-striped text-center">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>Active</th>
                    <th>Role</th>
                    <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                {% for user in paginator %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</a> </td>
                    <td>{% if user.enabled == 1 %} <a href="{{ path('admin_user_active', {"id": user.id}) }}" class="btn btn-success">Active</a> {% else %} <a href="{{ path('admin_user_active', {"id": user.id}) }}" class="btn btn-danger">Deactive</a>{% endif %}</td>
                    <td>{% for role in user.roles %}{{ role }} {% endfor %}</td>
                    <td><a style="color: darkred;" href="#" class="fas fa-times"></a></td>
                </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {{ knp_pagination_render(paginator) }}
    </div>

{% endblock %}